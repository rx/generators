Voom::Presenters.define(:edit_micah_dialog) do
  helpers AAA::Helpers::Micahs

  dialog id: :edit_micah_dialog do
    title "Edit Micah #{micah.name}"
    form do
       identity_fields(micah)
       button 'Cancel'
       button 'Save' do
         event :click do
           updates micah_path(micah)
           replaces :micah, :micah_card, micah_id: micah.id
         end
       end
    end
  end
end
