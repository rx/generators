Voom::Presenters.define(:delete_micah_dialog) do
  helpers AAA::Helpers::Micahs

  dialog id: :delete_micah_dialog do
    title "Delete Micah #{micah.name}?"
    body "This is **permanent**."

    button 'Cancel'
    button "Yes I'm Sure" do
      event :click do
        deletes micah_path(micah), redirect: presenters_path(:micahs)
      end
    end
  end
end
